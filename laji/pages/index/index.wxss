page, .main {
  height: 100%;
  font-size: 28rpx;
}

.classify-left {
  float: left;
  width: 180rpx;
  height: 92%;
  box-sizing: border-box;
  background: #f5f5f5;
}

.classify-left.hidden {
  display: none;
}

.cate-list {
  color: #9e9e9e;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  font-size: 30rpx;
  background: #f5f5f5;
  position: relative;
}

.listcard {
  position: absolute;
  width: 180rpx;
  color: #9e9e9e;
  line-height: 88rpx;
  text-align: center;
  font-size: 30rpx;
  background: #f5f5f5;
}

.listcard2 {
  position: absolute;
  width: 180rpx;
  left:-180rpx;
  color: white;
  height: 88rpx;
  line-height: 88rpx;
  text-align: center;
  font-size: 30rpx;
  background: rgb(95, 66, 23);
}

.animation_on {
  animation: LtoR 1s forwards;
  -webkit-animation: LtoR 1s forwards; /*Safari and Chrome*/
}

.classify-right {
  float: left;
  width: 570rpx;
  box-sizing: border-box;
  height: 92%;
  overflow: hidden;
}

.classify-right.hidden {
  display: none;
}

.douleline:nth-child(2n-1) {
  background: #f3f3f3;
}

.douleline {
  color: #575757;
  text-align: left;
  font-size: 16px;
  padding-left: 20px;
}

.describe {
  width: 84%;
  border-radius: 10px;
  background-color:  rgb(255, 174, 174);
  margin-left: 8%;
  margin-top: 8%;
  margin-right: 8%;
  text-align: center;
}

.lajiclassfity {
  padding-top: 10px;
  width: 30%;
  height: 150rpx;
  border-radius: 20px;
}

@keyframes LtoR {
  0% {
    left: -180rpx;
  }

  100% {
     left: 0rpx;
  }

}

@-webkit-keyframes LtoR {
  0% {
    left: -180rpx;
  }

  100% {
    left: 0rpx;
  }
}
